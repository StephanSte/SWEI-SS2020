<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum_wien.if18b070.FXMLController">
    <top>
        <VBox>
            <MenuBar fx:id="topMenuBar">
                <Menu text="File">
                    <MenuItem fx:id="ChooseFile" text="Choose File" />
                </Menu>

                <Menu text="Edit">
                    <MenuItem text="myItem" />
                </Menu>

                <Menu text="Options">
                    <MenuItem text="myItem" />
                </Menu>

                <Menu text="Help">
                    <MenuItem text="myItem" />
                </Menu>
            </MenuBar>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
            <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
                <AnchorPane fx:id="imgActiveContainer" minHeight="100" minWidth="100">
                    <ImageView fx:id="imgActive" managed="false" preserveRatio="true" />
                </AnchorPane>
                <TabPane minWidth="-Infinity">
                    <Tab closable="false" text="IPTC">

                    </Tab>

                    <Tab closable="false" text="EXIF">

                    </Tab>

                    <Tab closable="false" text="Photographer">

                    </Tab>
                </TabPane>
            </SplitPane>
            <ScrollPane hbarPolicy="ALWAYS" vbarPolicy="NEVER">
                <HBox fx:id="imgScrollPaneHBox" />
            </ScrollPane>
        </SplitPane>
    </center>

    <Label fx:id="label" />

    <bottom>
        <Button fx:id="button" />
    </bottom>
</BorderPane>
